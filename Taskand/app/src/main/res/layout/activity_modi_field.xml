<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModiFieldActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:gravity="center"
            android:background="@drawable/background">
            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint="Name"
                android:gravity="center"
                android:background="@drawable/bt_border"
                android:padding="8dp"
                android:textColorHint="#626262"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/descripEdit"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint="Description"
                android:gravity="center"
                android:background="@drawable/bt_border"
                android:padding="8dp"
                android:textColorHint="#626262"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/PreEdit"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint="Priority"
                android:gravity="center"
                android:background="@drawable/bt_border"
                android:padding="8dp"
                android:textColorHint="#626262"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:id="@+id/layout2">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="430dp"
                android:layout_below="@+id/descrip"
                android:layout_marginTop="20dp"
                android:id="@+id/listChildren"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/layout2">

            <Button
                android:id="@+id/modif"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Modification"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/SonTask"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ADD Children"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>